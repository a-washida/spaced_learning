<%= render "shared/header" %>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class="form-wrap">
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>
  <%= f.submit "ログイン" ,class:"login-btn" %>
</div>
<% end %>