<%= render "shared/header" %>
<div class="registration-main">
  <div class="registration-form-wrap">
  <div class="registration-form__header">ユーザー情報入力</div>
  <%= form_with model: @user, url: user_session_path, class: 'registration-form', local: true do |f| %>
    <% if flash[:alert].present? %>
      <div class="login-failure-message"><%=flash[:alert]%></div>
    <% end %>
    <p class="test-user">
      テストユーザーです<br>
      メールアドレス：test@test<br>
      パスワード：test28447
    </p>
    <div class="registration-form__group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class:"registration-form__input", placeholder:"PC・携帯どちらでも可" %>
    </div>
    <div class="registration-form__group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class:"registration-form__input", placeholder:"6文字以上の半角英数字" %>
    </div>
    <%= f.submit "ログイン" ,class:"registration-form__btn" %>
  <% end %>
  </div>
</div>