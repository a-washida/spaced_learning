<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="form-wrap">
<%= render partial: 'shared/error_messages', locals: { model: f.object } %>
  <div class="form-group">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, class:"input-default", placeholder:"nicknameを入力してください", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>
  <%= f.submit "サインアップ" ,class:"register-btn" %>
</div>
<% end %>