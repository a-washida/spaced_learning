<%= render "shared/header" %>
<div class="registration-main">
  <div class="registration-form-wrap">
    <div class="registration-form__header">ユーザー情報入力</div>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-form', local: true do |f| %>
      <%= render partial: 'shared/error_messages', locals: { model: f.object } %>
      <div class="registration-form__group">
        <%= f.label :nickname, 'ニックネーム' %>
        <%= f.text_field :nickname, class:"registration-form__input", placeholder:"例) 山田太郎", autofocus: true %>
      </div>
      <div class="registration-form__group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class:"registration-form__input", placeholder:"PC・携帯どちらでも可" %>
      </div>
      <div class="registration-form__group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class:"registration-form__input", placeholder:"6文字以上の半角英数字" %>
        <div class="password-restriction">※英字と数字の両方を含めて設定してください</div>
      </div>
      <div class="registration-form__group">
        <%= f.label :password_confirmation, 'パスワード(確認)' %>
        <%= f.password_field :password_confirmation, class:"registration-form__input", placeholder:"6文字以上の半角英数字" %>
      </div>
      <%= f.submit "新規登録" ,class:"registration-form__btn" %>
    <% end %>
  </div>
</div>