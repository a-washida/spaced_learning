<%= render 'shared/header' %>
<div class="index-main">
  <% @question_answers.each do |question_answer| %>
    <div class="wrap-wrap">
      <div class="index-question-wrap">
        <div class="show-question">
          <div class="show-textarea" style="font-size: <%=100 * question_answer.question_option.font_size.name.to_f%>%;"><%=question_answer.question%></div>
          <div id="insert-preview-image-question">
            <%= image_tag question_answer.question_option.image, class: 'img-preview-question', style: "width: #{200 * question_answer.question_option.image_size.name.to_f}px;" if question_answer.question_option.image.attached? %>
          </div>
        </div>
      </div>
      <div class="index-question-explanation">
        <%= link_to '問題詳細ページ', group_question_answer_path(@group, question_answer) %>
      </div>
    </div>
  <% end %>
</div>
<div>
  <%= paginate @question_answers %>
</div>

