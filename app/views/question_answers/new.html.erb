<%= render 'shared/header' %>
<div class="create-question-main">
  <%= form_with model: @question_answer_with_option, url: new_group_question_answer_path, class: 'form-question-answer', local: true do |f| %>
    <div class="question-answer-area">
      <div class="form-question-area">
        <%= f.text_area :question, class:"input-textarea", placeholder:"問題を入力してください" %>
        <%= f.label :question_image, "画像", class:"image-button" %>
        <%= f.file_field :question_image, class:"hidden" %>
      </div>
      <div class="form-answer-area">
        <%= f.text_area :answer, class:"input-textarea", placeholder:"解答を入力してください" %>
        <%= f.label :answer_image, "画像", class:"image-button" %>
        <%= f.file_field :answer_image, class:"hidden" %>
      </div>
    </div>
    <%= f.submit '作成', class:"question-submit-button" %>

    <div class="preview-two-area">
      <div class="question-preview-and-pulldown">問題のプレビュー
        <div class="question-preview">
          <div id="insert-preview-question-textarea"></div>
          <div id="insert-preview-image-question"></div>
        </div>
        <div class="question-pulldown">
          <div class="question-font-pulldown-wrap">
            <div class="pulldown-explanation">文字サイズを変更(倍)</div>
            <%= f.collection_select(:question_font_size_id, FontSize.all, :id, :name, {selected: 6}, {class:"pulldown-select"}) %>
          </div>
          <div class="question-image-pulldown-wrap">
            <div class="pulldown-explanation">画像サイズを変更(倍)</div>
            <%= f.collection_select(:question_image_size_id, ImageSize.all, :id, :name, {selected: 4}, {class:"pulldown-select"}) %>
          </div>
        </div>
      </div>
      <div class="answer-preview-and-pulldown">解答のプレビュー
        <div class="answer-preview">
          <div id="insert-preview-answer-textarea"></div>
          <div id="insert-preview-image-answer"></div>
        </div>
        <div class="answer-pulldown">
          <div class="answer-font-pulldown-wrap">
            <div class="pulldown-explanation">文字サイズを変更(倍)</div>
             <%= f.collection_select(:answer_font_size_id, FontSize.all, :id, :name, {selected: 6}, {class:"pulldown-select"}) %>
          </div>
          <div class="answer-image-pulldown-wrap">
            <div class="pulldown-explanation">画像サイズを変更(倍)</div>
            <%= f.collection_select(:answer_image_size_id, ImageSize.all, :id, :name, {selected: 4}, {class:"pulldown-select"}) %>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>
</div>
